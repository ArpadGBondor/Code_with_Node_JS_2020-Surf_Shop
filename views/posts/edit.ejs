<h1>Edit post</h1>
<form class="" action="/posts/<%= post.id %>?_method=PUT" method="POST">
  <div class="">
    <label for="title">Title:</label>
    <input type="text" name="post[title]" id="title" placeholder="Title" value="<%= post.title %>">
  </div>
  <div class="">
    <label for="price">Price:</label>
    <input type="text" name="post[price]" id="price" placeholder="Price" value="<%= post.price %>">
  </div>
  <div class="">
    <label for="description">Description:</label>
    <textarea name="post[description]" id="description" rows="5" cols="40" placeholder="Description"><%= post.description %></textarea>
  </div>
  <div class="">
    <label for="location">Location:</label>
    <input type="text" name="post[location]" id="location" placeholder="Location" value="<%= post.location %>">
  </div>
  <button type="submit" name="button">Publish post</button>
</form>
